<h2>Contact me</h2>
<form
  action='/contact/send-message'
  method='POST'
  enctype='multipart/form-data'
>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <label>
    Project design:
    <input type="file" name="image" accept="image/png, image/gif, image/jpeg, image/jpg"></input>
  </label>
  <button type='submit'>Send message</button>
</form>

{{#if isSent}}
  <div>The message has been sent!</div>
{{/if}}

{{#if isError}}
  <div>You can't leave fields empty!</div>
{{/if}}

{{#if fileName}}
  <div>
    <img src='/images/uploads/{{fileName}}' />
  </div>
{{/if}}